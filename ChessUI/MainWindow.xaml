<Window x:Class="ChessUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Width="562" SizeToContent="Height"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="{StaticResource MainColor}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3069db"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- WINDOW BUTTONS-->
        <Border Background="#0f1114" MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label Foreground="Gray">Chess</Label>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Content="🗕"
                            Padding="0,0,0,3"
                            Click="ButtonMinimize_Click"
                            Style="{StaticResource WindowButton}"/>

                    <Button Content="◻"
                            Click="ButtonMaximize_Click"
                            Style="{StaticResource WindowButton}"/>

                    <Button Content="⨉"
                            Click="ButtonClose_Click"
                            Style="{StaticResource WindowButton}"/>

                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT-->

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="512"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--
                <StackPanel Grid.Column="0" Name="EvaluationBar">
                    <Rectangle Name="WhiteAdvantage" Fill="White"/>
                    <Rectangle Name="BlackAdvantage" Fill="Black"/>
                </StackPanel>-->
                
                <StackPanel Grid.Column="0" Name="EvaluationBar" Background="Black">
                    <Rectangle Name="WhiteAdvantage" Fill="White" Height="256">
                        <Rectangle.RenderTransform>
                            <ScaleTransform ScaleY="1" CenterY="1"/>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                </StackPanel>

                <Viewbox Grid.Column="1">
                    <Grid Width="512" Height="512" Name="Chessboard">
                        <UniformGrid Name="Background" Rows="8" Columns="8"/>
                        <UniformGrid Name="HighlightGrid" Rows="8" Columns="8"/>
                        <UniformGrid Name="ChessPieces" Rows="8" Columns="8" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Canvas Name="DragLayer" IsHitTestVisible="False"/>
                    </Grid>
                </Viewbox>
            </Grid>
            
            

            <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Undo" Width="200" Height="50" Click="UndoButton_Click" Margin="10"/>
                <Button Content="Rotate" Width="200" Height="50" Click="RotateButton_Click" Margin="10"/>
            </WrapPanel>
        </Grid>
        
        

    </Grid>
</Window>
