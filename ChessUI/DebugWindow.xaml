<Window x:Class="ChessUI.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Height="450" Width="500"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="{StaticResource MainColor}">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Background="#0f1114" MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch">
                <Label Foreground="Gray">Debug</Label>

                <StackPanel HorizontalAlignment="Right"
                    Orientation="Horizontal">

                    <Button Content="🗕"
                    Padding="0,0,0,3"
                    Click="ButtonMinimize_Click"
                    Style="{StaticResource WindowButton}"/>

                    <Button Content="⨉"
                    Click="ButtonClose_Click"
                    Style="{StaticResource WindowButton}"/>

                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                </Style>
            </Grid.Resources>

            <!-- Row 1 -->
            <Border Grid.Row="0" Grid.Column="0">
                <Label Content="Depth" Foreground="White"/>
            </Border>
            
            <Border Grid.Row="0" Grid.Column="1">
                <TextBox Grid.Row="0" Grid.Column="1" 
                     Background="#16181c" Foreground="White" 
                     Margin="5" Width="200" HorizontalAlignment="Left"/>    
            </Border>
            
            
            <!-- Row 2 -->
            <Border Grid.Row="1" Grid.Column="0">
                <Label Content="Cos" Foreground="White"/>
            </Border>
            
            <Border Grid.Row="1" Grid.Column="1">
                <Label Content="{Binding AIEnabled}" Foreground="White"/>
            </Border>

            
            <!-- Row 3-->
            <Border Grid.Row="2" Grid.Column="0">
                
            </Border>
            
            <Border Grid.Row="2" Grid.Column="1">
                
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Margin="10">
            <CheckBox Content="AI Enabled" Foreground="White" IsChecked="{Binding AIEnabled}"/>
        </StackPanel>

        <WrapPanel Grid.Row="3">
            <Button Content="Test" Width="140" Height="45" Margin="10"/>
            <Button Content="Test" Width="140" Height="45" Margin="10"/>
            <Button Content="Test" Width="140" Height="45" Margin="10"/>
        </WrapPanel>

    </Grid>
</Window>
