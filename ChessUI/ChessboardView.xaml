<UserControl x:Class="ChessUI.ChessboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="612">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="512"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Name="EvaluationBar" Background="Black">
                <Rectangle Name="WhiteAdvantage" Fill="White" Height="256">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="1" CenterY="1"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </StackPanel>

            <Viewbox Grid.Column="1">
                <Grid Width="512" Height="512" Name="Chessboard">
                    <UniformGrid Name="Background" Rows="8" Columns="8"/>
                    <UniformGrid Name="HighlightGrid" Rows="8" Columns="8"/>
                    <UniformGrid Name="ChessPieces" Rows="8" Columns="8" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <Canvas Name="DragLayer" IsHitTestVisible="False"/>
                </Grid>
            </Viewbox>
        </Grid>


        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Undo" Width="200" Height="50" Click="UndoButton_Click" Margin="10"/>
            <Button Content="Rotate" Width="200" Height="50" Click="RotateButton_Click" Margin="10"/>
        </WrapPanel>
    </Grid>
</UserControl>
